    "replace-ext": "^1.0.0",
    "through2": "^3.0.1",
    "vinyl-contents": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^12.0.0",
    "eslint": "^7.0.0",
    "eslint-config-gulp": "^5.0.0",
    "expect": "^26.0.1",
    "mississippi": "^4.0.0",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1",
    "vinyl": "^2.2.0"
