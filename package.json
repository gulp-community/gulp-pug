{
  "name": "gulp-pug",
  "version": "4.0.1",
  "description": "Gulp plugin for compiling Pug templates",
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "keywords": [
    "jade",
    "pug",
    "gulpplugin",
    "stream",
    "compile"
  ],
  "repository": "https://github.com/gulp-community/gulp-pug.git",
  "files": [
    "index.d.ts",
    "index.js",
    "LICENSE"
